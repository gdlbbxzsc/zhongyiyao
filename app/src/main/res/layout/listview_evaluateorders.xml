<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_shop_name"
            style="@style/font_black_normal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/blackjiantou"
            android:gravity="center"
            android:padding="@dimen/dp_10" />


        <View
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_state"
            style="@style/font_red_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_6"
            android:gravity="center"
            android:padding="@dimen/dp_10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="left|top"
        android:orientation="horizontal"
        android:padding="@dimen/dp_6">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:gravity="center"
            android:scaleType="fitXY"
            tools:src="@drawable/b1banner" />

        <TextView
            android:id="@+id/tv_contents"
            style="@style/font_gray6_small1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_70"
            android:gravity="left|center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">


        <TextView
            style="@style/font_black_normal1"
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_weight="1" />


        <TextView
            style="@style/font_black_small2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="共" />

        <TextView
            android:id="@+id/iv_goods_num"
            style="@style/font_black_small2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0" />

        <TextView
            style="@style/font_black_small2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="件商品 需付款:    ￥" />

        <TextView
            android:id="@+id/iv_money_all"
            style="@style/font_black_small2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_6"
            android:gravity="center"
            android:text="00.00" />


    </LinearLayout>

    <View
        style="@style/line_gray"
        android:layout_width="fill_parent"
        android:layout_height="1px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="right|center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_pay"
            style="@style/font_red_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_7"
            android:background="@drawable/myorders_item_red_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_6"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_6"
            android:text="去支付" />


    </LinearLayout>
</LinearLayout>
