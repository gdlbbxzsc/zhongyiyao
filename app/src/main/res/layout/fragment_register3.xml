<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_f8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="left|center"
        android:orientation="horizontal">

        <TextView
            style="@style/font_gray6_normal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请设置登录密码" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/register_layout_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_pwd"
            style="@style/font_gray6_normal2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入密码"
            android:maxLength="20"
            android:maxLines="1"
            android:padding="@dimen/dp_15" />

        <ImageView
            android:id="@+id/iv_show_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_15"
            android:scaleType="center"
            android:src="@drawable/login_img_level" />

    </LinearLayout>


    <Button
        android:id="@+id/button"
        style="@style/font_white_normal1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_41"
        android:background="@drawable/register_btn_bg"
        android:text="完成" />

    <TextView
        style="@style/font_gray6_small2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:text="密码由6-20位字母、数字或半角符号组成，不能是10位以下纯数字/字母/半角符号，字母区分大小写" />

    <View
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_weight="1" />

</LinearLayout>