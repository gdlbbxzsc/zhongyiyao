<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_f8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical">


    <TextView
        style="@style/font_black_normal2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="left|center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:text="请填写历史收货姓名" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_name"
            style="@style/font_gray6_normal2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:background="@color/bg_f8"
            android:hint="历史已完成订单中的收货人"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:padding="@dimen/dp_15" />
    </LinearLayout>


    <TextView
        style="@style/font_black_normal2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="#ffffff"
        android:gravity="left|center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:text="请填写新密码" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:background="@color/bg_f8"

            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_pwd"
                style="@style/font_gray6_normal2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/bg_f8"
                android:hint="请输入密码"
                android:maxLength="20"
                android:maxLines="1"
                android:padding="@dimen/dp_15" />

            <ImageView
                android:id="@+id/iv_show_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/bg_f8"
                android:padding="@dimen/dp_15"
                android:scaleType="center"
                android:src="@drawable/login_img_level" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        style="@style/font_red_normal2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15"
        android:text="备注:请将密码设置为6-20位，并且由字母、数字和符号两种以上组合，不能与旧密码相同" />

    <Button
        android:id="@+id/button"
        style="@style/font_white_normal1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_41"
        android:background="@drawable/login_btn_bg"
        android:text="完成" />

    <View
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_weight="1" />

</LinearLayout>