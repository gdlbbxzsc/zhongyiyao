<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/font_black_normal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="订单编号:" />

        <TextView
            android:id="@+id/tv_order_code"
            style="@style/font_black_normal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="店铺名称" />


        <View
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <TextView
            style="@style/font_gray6_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_3"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="下单时间:" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/font_gray6_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_6"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_6">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:scaleType="fitXY"
            tools:src="@drawable/b1banner" />

        <TextView
            android:id="@+id/tv_contents"
            style="@style/font_black_small1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_pic"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_toRightOf="@id/iv_pic"
            android:gravity="left|center" />

        <TextView
            android:id="@+id/tv_num_text"
            style="@style/font_gray6_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_pic"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_toRightOf="@id/iv_pic"
            android:gravity="left|center"
            android:text="数量:" />

        <TextView
            android:id="@+id/tv_num"
            style="@style/font_gray6_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_pic"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_toRightOf="@id/tv_num_text"
            android:gravity="left|center"
            android:text="1" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="right|center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_pay"
            style="@style/font_red_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_7"
            android:background="@drawable/myorders_item_red_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_6"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_6" />


    </LinearLayout>
</LinearLayout>
