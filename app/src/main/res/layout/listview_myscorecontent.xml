<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_45"
    android:paddingTop="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_score_msg"
        style="@style/font_black_normal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_score_time_pre"
        style="@style/font_gray6_small1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_score_msg"
        android:gravity="center"
        android:text="时间:" />

    <TextView
        android:id="@+id/tv_score_time"
        style="@style/font_gray6_small1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_score_msg"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_toRightOf="@id/tv_score_time_pre"
        android:gravity="center"
        android:text="00" />

    <TextView
        android:id="@+id/tv_score_num"
        style="@style/font_gray6_small1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_16"
        android:gravity="center"
        android:text="00" />
</RelativeLayout>
