<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/textView"
        style="@style/font_black_normal2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2line"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:text=""
        android:textSize="@dimen/sp_20" />

    <View
        android:id="@+id/view"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_centerInParent="true" />


    <View
        android:id="@+id/button1line"
        style="@style/line_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/view" />

    <View
        android:id="@+id/button2line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/view"
        android:layout_alignParentRight="true"
        android:background="@color/red" />

    <Button
        android:id="@+id/button1"
        style="@style/font_black_normal1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/view"
        android:background="@drawable/dialog_left_bg"
        android:paddingBottom="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:text="取消" />

    <Button
        android:id="@+id/button2"
        style="@style/font_white_normal1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/dialog_right_bg"
        android:paddingBottom="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:text="确认" />
</RelativeLayout>

