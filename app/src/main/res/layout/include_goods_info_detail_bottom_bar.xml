<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_contact_sell"
        style="@style/font_gray6_small3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="@dimen/dp_5"
        android:drawableTop="@drawable/lianximaijia"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"
        android:visibility="gone"
        android:text="联系卖家" />

    <TextView
        android:id="@+id/tv_goto_shop"
        style="@style/font_gray6_small3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="@dimen/dp_5"
        android:drawableTop="@drawable/dianpu"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"
        android:text="店铺" />

    <TextView
        android:id="@+id/tv_goto_shop_car"
        style="@style/font_gray6_small3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="@dimen/dp_5"
        android:drawableTop="@drawable/theshoppingcart1"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"
        android:text="购物车" />
    <TextView
        android:id="@+id/tv_add_shop_car"
        style="@style/font_white_normal2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="#80ee2222"
        android:text="加入购物车" />
    <TextView
        android:id="@+id/tv_immediately_go_buy"
        style="@style/font_white_normal2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/red"
        android:gravity="center"
        android:text="立即购买" />




</LinearLayout>