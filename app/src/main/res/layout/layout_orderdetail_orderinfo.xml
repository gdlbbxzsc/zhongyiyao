<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:shrinkColumns="1"
    android:stretchColumns="1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15">

        <TextView
            style="@style/font_black_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:text="支付方式:" />

        <TextView
            android:id="@+id/tv_orderdetail_pay_type"
            style="@style/font_black_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center" />

    </TableRow>

    <View
        style="@style/bg_f4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15">

        <TextView
            style="@style/font_black_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:text="配送方式:" />

        <TextView
            android:id="@+id/tv_orderdetail_send_type"
            style="@style/font_black_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </TableRow>

    <View
        style="@style/bg_f4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8">

        <TextView
            style="@style/font_black_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:text="发票类型:" />

        <TextView
            android:id="@+id/tv_orderdetail_receipt_type"
            style="@style/font_black_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8">

        <TextView
            style="@style/font_black_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:text="发票抬头:" />

        <TextView
            android:id="@+id/tv_orderdetail_receipt_title"
            style="@style/font_black_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_8"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8">

        <TextView
            style="@style/font_black_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:text="发票内容:" />

        <TextView
            android:id="@+id/tv_orderdetail_receipt_content"
            style="@style/font_black_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </TableRow>
</TableLayout>

