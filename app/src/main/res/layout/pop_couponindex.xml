<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="top|center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_3"
        android:paddingTop="@dimen/dp_3">

        <TextView
            android:id="@+id/edt_search"
            style="@style/font_gray6_normal2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/sousuoicon"
            android:drawablePadding="@dimen/dp_20"
            android:gravity="left|center"
            android:hint="点击搜索"
            android:maxLines="1"
            android:minLines="1"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:paddingTop="@dimen/dp_8"
            android:singleLine="true" />

        <TextView
            android:id="@+id/ibtn_msg"
            style="@style/font_gray6_normal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@null"
            android:padding="6dip"
            android:text="取消" />
    </LinearLayout>


    <View
        style="@style/line_gray"
        android:layout_width="fill_parent"
        android:layout_height="1px" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/font_gray6_small2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部共" />

        <TextView
            android:id="@+id/tv_pop_nums"
            style="@style/font_gray6_small2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />

        <TextView
            style="@style/font_gray6_small2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个分类" />

    </LinearLayout>

    <View
        style="@style/line_gray"
        android:layout_width="@dimen/dp_30"
        android:layout_height="1px" />


    <GridView
        android:id="@+id/gridView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:cacheColorHint="#00000000"
        android:columnWidth="100dp"
        android:divider="#00000000"
        android:dividerHeight="0dip"
        android:drawSelectorOnTop="false"
        android:fadingEdge="none"
        android:horizontalSpacing="@dimen/dp_16"
        android:listSelector="#00000000"
        android:numColumns="4"
        android:padding="@dimen/dp_16"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/dp_16" />

</LinearLayout>