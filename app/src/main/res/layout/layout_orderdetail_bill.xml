<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:background="#ffffff"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:shrinkColumns="1"
    android:stretchColumns="1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8">

        <TextView
            style="@style/font_black_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_8"
            android:gravity="left|center"
            android:text="商品总额" />

        <TextView
            android:id="@+id/tv_orderdetail_bill_money_all"
            style="@style/font_black_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8">

        <TextView
            style="@style/font_black_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_8"
            android:gravity="left|center"
            android:text="运费" />

        <TextView
            android:id="@+id/tv_orderdetail_bill_send_pay"
            style="@style/font_black_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8"
        android:visibility="gone">

        <TextView
            style="@style/font_black_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_8"
            android:gravity="left|center"
            android:text="优惠" />

        <TextView
            android:id="@+id/tv_orderdetail_bill_coupon"
            style="@style/font_black_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8"
        android:visibility="gone">

        <TextView
            style="@style/font_black_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_8"
            android:gravity="left|center"
            android:text="促销" />

        <TextView
            android:id="@+id/tv_orderdetail_bill_salespromotion"
            style="@style/font_black_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8"
        android:visibility="gone">

        <TextView
            style="@style/font_black_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_8"
            android:gravity="left|center"
            android:text="折扣" />

        <TextView
            android:id="@+id/tv_orderdetail_bill_rebate"
            style="@style/font_black_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:gravity="right|center"
            android:orientation="horizontal">

            <TextView
                style="@style/font_black_normal1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|center"
                android:text="需付款:" />

            <TextView
                style="@style/font_red_normal1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_18"
                android:gravity="right|center"
                android:text="￥" />

            <TextView
                android:id="@+id/tv_orderdetail_bill_payall"
                style="@style/font_red_normal1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|center"
                android:text="00.00" />

        </LinearLayout>

    </TableRow>

</TableLayout>

