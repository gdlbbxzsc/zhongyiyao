<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/type_shop_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include
                    android:id="@+id/type_include"
                    layout="@layout/include_title_search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1" />

                <CheckBox
                    android:id="@+id/all_commodity_cbx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:button="@drawable/check_shop_pic"
                    android:checked="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_15" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_d7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5">


                <RadioGroup
                    android:id="@+id/typeshoplist_rgp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/comprehensive_rbn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:text="综合"
                        android:textColor="@drawable/rbn_text_color" />

                    <RadioButton
                        android:id="@+id/salesvolume_rbn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:text="销量"
                        android:textColor="@drawable/rbn_text_color" />

                    <RadioButton
                        android:id="@+id/price_rbn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableRight="@drawable/rbn_right_drawable"
                        android:gravity="center"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_25"
                        android:paddingBottom="@dimen/dp_5"
                        android:text="价格"
                        android:textColor="@drawable/rbn_text_color" />

                </RadioGroup>

                <TextView
                    android:id="@+id/screen_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/saixuan"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_30"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="筛选" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <FrameLayout
                    android:id="@+id/typeshoplist_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_browse_records"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_70"
                    android:src="@drawable/zuji" />
            </RelativeLayout>

        </LinearLayout>
    </FrameLayout>

    <include
        layout="@layout/layout_searchgoodstype_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/white"
        android:orientation="vertical" />
