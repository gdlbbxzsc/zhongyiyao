<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="top|center"
    android:orientation="vertical">

    <include
        layout="@layout/titlebar_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center"
            android:orientation="horizontal"
            android:shrinkColumns="1"
            android:stretchColumns="1">

            <TableRow>

                <TextView
                    style="@style/font_black_normal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="物流公司" />

                <EditText
                    android:id="@+id/edt_sendback_com"
                    style="@style/font_black_normal2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_f4"
                    android:maxLines="1"
                    android:padding="@dimen/dp_15" />
            </TableRow>

            <TableRow>

                <EditText
                    style="@style/font_gray6_normal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_f4"
                    android:maxLines="1"
                    android:padding="@dimen/dp_8"
                    android:visibility="invisible" />

                <TextView
                    style="@style/font_gray9_small2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="请填写正确的物流公司" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/font_black_normal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="物流单号" />

                <EditText
                    android:id="@+id/edt_sendback_code"
                    style="@style/font_black_normal2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_f4"
                    android:maxLines="1"
                    android:padding="@dimen/dp_15" />
            </TableRow>

            <TableRow>

                <EditText
                    style="@style/font_gray6_normal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_f4"
                    android:maxLines="1"
                    android:padding="@dimen/dp_8"
                    android:visibility="invisible" />

                <TextView
                    style="@style/font_gray9_small2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="请填写正确的物流单号" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button"
        style="@style/font_white_normal1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_41"
        android:background="@drawable/login_btn_bg"
        android:text="确定" />


    <View
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_weight="1" />

</LinearLayout>