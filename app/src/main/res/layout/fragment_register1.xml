<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_f8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/register_layout_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/font_gray6_normal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_8"
            android:drawableRight="@drawable/registerjiantou"
            android:padding="@dimen/dp_15"
            android:text="+86" />

        <View
            style="@style/line_gray"
            android:layout_width="1px"
            android:layout_height="@dimen/dp_30" />

        <EditText
            android:id="@+id/edt_account"
            style="@style/font_gray6_normal2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:padding="@dimen/dp_15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/register_layout_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_img_code"
            style="@style/font_gray6_normal2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:maxLength="4"
            android:maxLines="1"
            android:padding="@dimen/dp_15" />

        <View
            style="@style/line_gray"
            android:layout_width="1px"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_15" />

        <ImageView
            android:id="@+id/iv_img_code"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_15"
            android:background="#ff0000" />


    </LinearLayout>


    <Button
        android:id="@+id/button"
        style="@style/font_white_normal1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_41"
        android:background="@drawable/register_btn_bg"
        android:text="下一步" />


    <View
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_weight="1" />

</LinearLayout>