<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/similarity_item_bg">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/font_black_small1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/iv_pic"
            android:layout_alignRight="@id/iv_pic"
            android:layout_below="@id/iv_pic"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="end"
            android:maxLines="1"
            android:minLines="1"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6" />


        <LinearLayout
            android:id="@+id/ll_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/iv_pic"
            android:layout_alignRight="@id/iv_pic"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="@dimen/dp_3"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6">

            <TextView
                android:id="@+id/tv_zy"
                style="@style/font_red_small3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tv_evaluate_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:text="自营" />

            <TextView
                android:id="@+id/tv_hd"
                style="@style/font_red_small3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@drawable/tv_evaluate_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:visibility="gone"
                tools:text="活动" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/iv_pic"
            android:layout_alignRight="@id/iv_pic"
            android:layout_below="@id/ll_type"
            android:layout_marginTop="@dimen/dp_6"
            android:gravity="left|bottom"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6">

            <TextView
                style="@style/font_red_small3_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_2"
                android:gravity="bottom"
                android:includeFontPadding="false"
                tools:text="￥" />

            <TextView
                android:id="@+id/tv_price"
                style="@style/font_red_normal1_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:includeFontPadding="false"
                tools:text="00.00" />

            <TextView
                android:id="@+id/iv_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:drawableRight="@drawable/quan"
                android:gravity="center"
                android:includeFontPadding="false" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            style="@style/font_gray6_small2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/iv_pic"
            android:layout_alignRight="@id/iv_pic"
            android:layout_below="@id/ll_money"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_1"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6"
            android:text="00.00" />
    </RelativeLayout>
</RelativeLayout>

