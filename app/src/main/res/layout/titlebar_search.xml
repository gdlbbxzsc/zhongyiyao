<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_3"
    android:paddingTop="@dimen/dp_3">

    <ImageButton
        android:id="@+id/ibtn_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:background="@null"
        android:padding="6dip"
        android:src="@drawable/fanhuiicon" />

    <EditText
        android:id="@+id/edt_search"
        style="@style/font_gray9_normal2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_weight="1"
        android:background="@drawable/search_edt_bg"
        android:drawableLeft="@drawable/sousuoicon"
        android:drawablePadding="@dimen/dp_20"
        android:gravity="left|center"
        android:hint="请输入搜索关键词"
        android:maxLines="1"
        android:minLines="1"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_8"
        android:singleLine="true" />

    <TextView
        android:id="@+id/ibtn_msg"
        style="@style/font_blue_small1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@null"
        android:padding="6dip"
        android:text="搜索" />
</LinearLayout>
